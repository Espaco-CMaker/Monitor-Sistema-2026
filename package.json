{
  "name": "monitor-sistema-2026",
  "version": "0.3.0",
  "description": "System Monitor 2026 - Real-time System Information Dashboard",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "node servidor.js",
    "dev": "node servidor.js",
    "prod": "NODE_ENV=production node servidor.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron-build": "electron-builder",
    "build": "npm run electron-build -- --publish never",
    "build-win": "npm run electron-build -- --win --publish never",
    "build-mac": "npm run electron-build -- --mac --publish never",
    "build-linux": "npm run electron-build -- --linux --publish never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "system-monitor",
    "dashboard",
    "real-time",
    "nodejs",
    "express"
  ],
  "author": "Espa√ßo CMaker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Espaco-CMaker/Monitor-Sistema-2026.git"
  },
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "systeminformation": "^5.30.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.cmaker.monitor-sistema-2026",
    "productName": "Monitor Sistema 2026",
    "asar": false,
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "servidor.js",
      "public/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,tests,*.d.ts}"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
